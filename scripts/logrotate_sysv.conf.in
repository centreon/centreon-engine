@VAR_DIR@/centengine.log {
  compress
  create 640 @USER@ @GROUP@
  daily
  delaycompress
  missingok
  olddir @LOG_ARCHIVE_DIR@
  createolddir 755 @USER@ @GROUP@
  rotate 365
  postrotate
    kill -HUP `cat @PID_FILE@`
  endscript
}

@VAR_DIR@/centengine.debug {
  compress
  create 640 @USER@ @GROUP@
  delaycompress
  missingok
  olddir @LOG_ARCHIVE_DIR@
  createolddir 755 @USER@ @GROUP@
  rotate 5
  size   1G
  postrotate
    kill -HUP `cat @PID_FILE@`
  endscript
}
